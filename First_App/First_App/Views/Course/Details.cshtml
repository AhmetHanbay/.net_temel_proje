@model Course


<div class="row">
    <div class="col-md-4">
        <img src="@Url.Content("~/images/" + Model.Image)" alt="" class="img-fluid rounded">
    </div>
    <div class="col-md-8">
        <div class="card-body">
            <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id">
                <h5 class="card-title">@Model.Title</h5>
            </a>
            <p class="card-text">@Model.Description</p>
            <div>
                @foreach(var tag in Model.Tags){
                    <span class="badge bg-danger">@tag</span>
                }
            </div>
        </div>
    </div>

</div>
